generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int              @id @default(autoincrement())
  name               String
  email              String           @unique
  passwordHash       String?
  googleId           String?          @unique
  resetToken         String?          @unique
  resetTokenExpiry   DateTime?
  childName          String?
  childAge           Int?
  onboardingComplete Boolean          @default(false)
  createdAt          DateTime         @default(now())
  preferences        UserPreferences?
  children           Child[]
  reviews            Review[]
  posts              Post[]
  comments           Comment[]
  votes              Vote[]
  groupMemberships   GroupMember[]
  videoViews         VideoView[]
}

model Child {
  id          Int      @id @default(autoincrement())
  userId      Int
  name        String
  dateOfBirth DateTime
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model UserPreferences {
  id          Int    @id @default(autoincrement())
  userId      Int    @unique
  concerns    String @default("[]")
  situations  String @default("[]")
  contentPrefs String @default("[]")
  user        User   @relation(fields: [userId], references: [id])
}

model Video {
  id               Int         @id @default(autoincrement())
  youtubeId        String
  title            String
  description      String
  channelName      String
  ageMin           Int
  ageMax           Int
  category         String
  tags             String      @default("[]")
  thumbnailUrl     String
  parentRating     Float       @default(0)
  reviewCount      Int         @default(0)
  stimulationLevel Float?
  createdAt        DateTime    @default(now())
  reviews          Review[]
  views            VideoView[]
}

model Review {
  id                   Int      @id @default(autoincrement())
  userId               Int
  videoId              Int
  rating               Int
  comment              String
  helpfulTags          String   @default("[]")
  contentTags          String   @default("[]")
  educationalRating    Int?
  ageAppropriateRating Int?
  engagementRating     Int?
  overallRating        Int?
  stimulationRating    Int?
  feedbackCompleted    Boolean  @default(false)
  createdAt            DateTime @default(now())
  user                 User     @relation(fields: [userId], references: [id])
  video                Video    @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model VideoView {
  id        Int      @id @default(autoincrement())
  userId    Int
  videoId   Int
  watchedAt DateTime @default(now())
  completed Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  video     Video    @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model Group {
  id          Int           @id @default(autoincrement())
  name        String
  slug        String        @unique
  description String
  ageMin      Int
  ageMax      Int
  memberCount Int           @default(0)
  icon        String        @default("ðŸ‘¶")
  createdAt   DateTime      @default(now())
  members     GroupMember[]
  posts       Post[]
}

model GroupMember {
  id       Int      @id @default(autoincrement())
  userId   Int
  groupId  Int
  joinedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id])
  group    Group    @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}

model Post {
  id           Int       @id @default(autoincrement())
  title        String
  content      String
  link         String?
  userId       Int
  groupId      Int
  upvotes      Int       @default(0)
  downvotes    Int       @default(0)
  score        Int       @default(0)
  commentCount Int       @default(0)
  createdAt    DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id])
  group        Group     @relation(fields: [groupId], references: [id])
  comments     Comment[]
  votes        Vote[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  postId    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model Vote {
  id     Int  @id @default(autoincrement())
  userId Int
  postId Int
  value  Int
  user   User @relation(fields: [userId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}
